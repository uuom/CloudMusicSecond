<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yangxp5.rebackandroid" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MusicBaseActivity"
            android:label="@string/title_activity_music_base" >
        </activity>
        <activity
            android:name=".SongListActivity"
            android:label="@string/title_activity_song_list" >
        </activity>
        <activity
            android:name=".LocalMusicActivity"
            android:label="@string/title_activity_local_music" >
        </activity>

        <service
            android:name=".service.MusicPlayerService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".MusicPlayerActivity"
            android:label="@string/title_activity_music_player" >
        </activity>
    </application>

</manifest>
