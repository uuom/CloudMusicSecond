<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context="com.example.yangxp5.rebackandroid.view.fragment.MusicButtomFragment">
    
    <LinearLayout
        android:id="@+id/ly_music"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_musicImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/defaultimg"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_musicImg"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:overScrollMode="ifContentScrolls"
                android:textSize="10pt"
                android:text="Visions"/>

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="EnV"
                android:singleLine="true"
                android:layout_alignBottom="@+id/iv_musicImg"
                android:layout_toRightOf="@+id/iv_musicImg" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/playbar_btn_pause"
        android:layout_alignTop="@+id/next"
        android:layout_toLeftOf="@+id/next"
        android:layout_toStartOf="@+id/next" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/playbar_btn_next"
        android:layout_alignBottom="@+id/tv_artist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/next"
        android:layout_marginRight="10dp"/>

</LinearLayout>
